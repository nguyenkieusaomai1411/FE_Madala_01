	body
		include ../modules/menu

		//-blog-header-------------------------------------
		section.section-blog1#section-blog1
			.container.blog-tool
				.blog-tool-header#grid
					| Home > Sản phẩm > Trang sức
			.container-fluid#banner
				img(src='../../img/Capture.jpg')

			.container.products
				.row#grid
					.col-lg-4
						.grid-right_top
							.flex-container#grid
								i.fas.fa-bars
								p.tag DANH MỤC SẢN PHẨM
							.grid-list
								.grid-list_item
									strong
										|MỸ PHẨM
									i.fas.fa-caret-right
								.grid-list_item
									strong
										|TRANG SỨC
									i.fas.fa-caret-right
								.grid-list_item_description
									ul
										li
											|Vòng tay
										li
											|Nhãn
										li
											|Lắc chân
										li
											|Phụ kiện khác
										li
											|Giày lười
										li
											|Giày mọi
								.grid-list_item
									strong
										|PHỤ KIỆN
									i.fas.fa-caret-right
								.grid-list_item
									strong
										|NƯỚC HOA
									i.fas.fa-caret-right
						.grid-right_middle
							p.tag SO SÁNH SẢN PHẨM
							.grid-list_item_description
								p Bạn chưa có sản phẩm để so sánh
						.grid-right_middle
							.col-bottom__tag
								p.tag TAG SẢN PHẨM								
								.col-bottom_list
									button Hoa tai
									button Son
									button Nước hoa
								.col-bottom_list
									button Giày
									button Sandal
									button Áo sơ mi
									button Nước hoa
								.col-bottom_list
									button Trẻ em
									button Thời trang nữ
						.grid-right_bottom
							img(src='../../img/Layer 61.jpg',width='100%')
					.col-lg-8
						+menu_list_pages
						.grid-product
							.row
								.col-lg-4.col-md-6.col-xs-12
									.item2
										+item_product('../../img/Product copy 4.png','OHUI')
								.col-lg-4.col-md-6.col-xs-12
									.item3
										+item_product('../../img/01_Home_32.jpg','HOME')
								.col-lg-4.col-md-6.col-xs-12
									.item4
										+item_product('../../img/35.jpg','DEBORA')
							.container#button-product
								button.button1 MUA HÀNG
								button.button2
									i.fas.fa-heart
								button.button3 ( )
							.row
								.col-lg-4.col-md-6.col-xs-12
									.item2
										+item_product('../../img/Product copy 4.png','OHUI')
								.col-lg-4.col-md-6.col-xs-12
									.item3
										+item_product('../../img/01_Home_32.jpg','HOME')
								.col-lg-4.col-md-6.col-xs-12
									.item4
										+item_product('../../img/35.jpg','DEBORA')
							.container#button-product
								button.button1 MUA HÀNG
								button.button2
									i.fas.fa-heart
