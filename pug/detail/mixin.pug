mixin menu_list_pages
	.blog-tool_icon
		.blog-tool_icon_left
			.blog-tool_icon_left1 
				i.fas.fa-th-large
			.blog-tool_icon_left2 
				img(src='../../img/list.png', alt='menu',width='20px')
		.blog-tool_icon_right
			.list 
				i.fas.fa-caret-left
				a(href='#', target='_blank')   1 
				a(href='#', target='_blank')   2
				a(href='#', target='_blank')   3 
				i.fas.fa-caret-right
