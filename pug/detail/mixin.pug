//---home_01----------------------------------------------
mixin item_product(href,name)
	.item
		.item-img
			img(src=href)
		.item-description
			p= name
			p.kind Mỹ phẩm Châu Âu
			p.price
				span.number-new 355.000
					sup đ
				span.number-old 450.000
					sup đ
				
//---05-list-------------------------------------------------
mixin item_list
	.col-lg-4.col-md-6.col-xs-12
		img(src='../../img/35.jpg',height='')
	.col-lg-8.col-md-6.col-xs-12
		p.list-item_header Mỹ phẩm Châu Âu thương hiệu hàng đầu thế giới
		p.vote 
			i.fas.fa-heart
			i.fas.fa-heart
			i.fas.fa-heart
			i.fas.fa-heart
			i.fas.fa-heart
			.vote-bye (4 lượt mua)
		p Tự hào được ghi là năm mà Tiffany & Co là thành lập, bộ sưu tập mang tính biểu tượng này cung cấp cho một cái gật đầu với qua trong khi thể hiện một cảm giác hiện đại với kiểu dáng đẹp đường cong và đường nét mượt mà.
		p.price
			span.number-new 355.000
				sup đ
		.grid-product-button
			.container#button-product
				button.button1 MUA HÀNG
				button.button2
					i.fas.fa-heart
				button.button3 ( )

